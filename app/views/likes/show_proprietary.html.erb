<div class="page-header">
  <h1>
    My Likes
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th> Actions</th>
      </tr>

      <% @user.likes.each do |like| %>
      <tr>

              <% photo = Photo.find(like.photo_id)%>
                <td><%=photo.caption %></td>
              <td><img src="<%= photo.image%>" width="200"></td>
                    <td>
          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
